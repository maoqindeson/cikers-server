    <delete id="truncate" parameterType="java.lang.Integer">
        TRUNCATE tb_property_relation
    </delete>

    <select id="selectByEqptId" resultMap="propertyRelationMap" parameterType="java.lang.Long">
        SELECT *
        FROM tb_property_relation
        WHERE equipment_id = #{eqptId};
    </select>
    <select id="selectByEqptIds" resultMap="propertyRelationMap">
        SELECT *
        FROM tb_property_relation
        WHERE equipment_id in
        <foreach collection="Ids" item="dramaId" open="(" close=")" separator=",">
            #{dramaId}
        </foreach>
    </select>
    <select id="selectColorsByEqptIds" resultType="java.lang.String">
        SELECT `value`  FROM tb_property where id in
        (SELECT property_id
        FROM tb_property_relation
        WHERE equipment_id in
        <foreach collection="Ids" item="dramaId" open="(" close=")" separator=",">
            #{dramaId}
        </foreach>
        and property_name ='MAINCOLOR')
    </select>
    <select id="selectByProductId" resultMap="propertyRelationMap" parameterType="java.lang.Long">
        SELECT *
        FROM tb_property_relation
        WHERE product_id = #{productId};
    </select>
</mapper>