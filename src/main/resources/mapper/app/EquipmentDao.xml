    </select>
    <select id="queryByarticleNumber" resultMap="equipmentMap">
        SELECT *
        FROM tb_equipment
        WHERE article_number=#{article_number} and state = 'NORMAL'
        order by disp_order ASC
    </select>
    <update id="updateStateByState">
        update tb_equipment set  state = #{state}
